{
  "license": "CC0-1.0",
  "name": "electreact",
  "version": "0.1.0",
  "private": true,
  "description": "Electron React Starter Kit",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "build": {
    "appId": "com.electreact.freik",
    "productName": "Electron React Starter Kit",
    "directories": {
      "buildResources": "build"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "analyze": "er analyze",
    "release": "yarn prep-release && yarn opt-release && electron-builder --publish=always",
    "tryrel": "yarn prep-release && yarn opt-release && electron-builder --publish=never",
    "opt-release": "er minify -i -r build",
    "prep-release": "yarn clean && yarn release-build && rimraf build/main/__tests__",
    "clean": "rimraf public/main public/*.js public/*.js.map .ts*.tsbuildinfo build dist",
    "release-build": "er prepare -r && er build",
    "build": "er prepare && er build",
    "start": "er start",
    "prepare": "er prepare",
    "types": "er types",
    "test": "er test",
    "testui": "jest --config config/jest.jsdom.js --watch",
    "testnode": "jest --config config/jest.node.js --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"static/**/*.ts\" \"config/*.js\" \"config/*.json\" \"*.json\" \"*.md\" \"src/**/*.css\" .prettierrc",
    "lint": "yarn eslint --fix --ext .ts --ext .tsx ./",
    "chk": "er check",
    "linecount": "git ls-files|grep \"\\.\\(css\\|ts\\|tsx\\)$\"|grep -v \"__\\|\\.d\\.ts\"|xargs wc -l",
    "postinstall": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "dependencies": {
    "@fluentui/font-icons-mdl2": "^8.1.17",
    "@fluentui/react": "^8.42.5",
    "@fluentui/react-hooks": "^8.3.6",
    "@freik/core-utils": "~0.34.0",
    "@freik/node-utils": "~0.20.6",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.5.2",
    "typescript": "^4.5.2",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@freik/build-tools": "^3.1.6",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.1",
    "electron-builder": "^22.14.7",
    "electron-devtools-installer": "^3.2.0",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "27.3.1",
    "jest-transform-css": "^3.0.0",
    "postcss": "8.3.11",
    "prettier": "^2.4.1",
    "react-scripts": "^4.0.3",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "27.0.7",
    "wait-on": "^6.0.0"
  },
  "packageManager": "yarn@3.1.0"
}
